{
  "name": "telegram-bot",
  "version": "1.0.0",
  "main": "index.js",
  "license": "UNLICENSED",
  "scripts": {
    "b": "yarn build",
    "wn": "yarn watch-node",
    "wnd": "yarn watch-node-debug",
    "wts": "yarn watch-ts",
    "start": "yarn serve",
    "serve": "node dist/index.js",
    "build": "yarn build-ts && yarn lint",
    "build-ts": "rm -rf dist && tsc",
    "lint": "eslint src/**/*.ts --fix",
    "watch-node": "nodemon --watch dist dist/index.js",
    "watch-node-debug": "nodemon --watch dist --inspect dist/index.js",
    "watch-ts": "rm -rf dist && tsc -w"
  },
  "dependencies": {
    "debug": "^4.3.1",
    "dotenv": "^8.2.0",
    "request": "^2.88.0",
    "telegraf": "^3.38.0",
    "lodash": "^4.17.20"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/dotenv": "^8.2.0",
    "@types/node": "^14.14.14",
    "@types/request": "^2.48.3",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "@types/lodash": "^4.14.108",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "7.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "typescript": "^4.1.3"
  }
}
