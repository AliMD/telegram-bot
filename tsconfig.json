{
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist",
    "lib": ["es2020"],
    "target": "es2020",
    "module": "CommonJS",
    "declaration": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": [],
}
